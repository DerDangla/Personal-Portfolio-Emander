<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the register page -->
<div class="container p-5">
  <!-- Message Area -->
  <% if(messages.length > 0) {%>
  <div class="alert alert-danger"><%= messages %></div>
  <% } %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-4 text-center">
        <div class="border container-fluid border-secondary p-5">
            <h2 class="py-5">Please Register</h2>
              <form method="POST" autocomplete="off">
               <fieldset class="form-group">
                <label for="username" class="pb-2">Username: </label>
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  placeholder="Enter username"
                  id="username"
                  required
                  autofocus
                />
              </fieldset>

              <fieldset class="form-group pt-3">
                <label for="password" class="pb-2">Password: </label>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="Enter password"
                  id="password"
                  required
                />
              </fieldset>

              <fieldset class="form-group pt-3">
                <label for="email" class="pb-2">Email: </label>
                <input type="email" class="form-control"
                name="email" placeholder="Enter Email Address"
                id="email" required>
              </fieldset>

              <fieldset class="form-group pt-3">
                  <label for="displayName" class="pb-2">Display Name: </label>
                  <input type="text" class="form-control"
                  name="displayName" placeholder="Enter Display Name"
                  id="displayName" required>
              </fieldset>
        

              <fieldset class="form-group text-right pt-4">
                <input type="submit" class="btn btn-success" value="Register" />
                <a href="/">
                  <input type="button" class="btn btn-warning" value="Cancel" />
                </a>
              </fieldset>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
