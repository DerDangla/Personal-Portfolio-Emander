<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group py-3">
          <label for="nameTextField" class="py-2">Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Full Name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>

        <div class="from-group py-3">
          <label for="numberTextField" class="py-2">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="numberTextField"
            placeholder="contact number"
            name="author"
            value="<%= contact.number %>"
            required
          />
        </div>

        <div class="from-group py-3">
          <label for="emailTextField" class="py-2">Email</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Enter the Year of Publication:"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>

        <div class="from-group pt-3">
          <button class="btn btn-primary form-control" type="submit">
            <i class="fas fa-edit"></i>Submit
          </button>
        </div>
        <div class="from-group pt-2">
          <a href="/business-contact" class="btn btn-warning form-control">
            <i class="fas fa-undo"></i>Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
